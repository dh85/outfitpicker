{
  "name": "swift-outfitpicker",
  "dockerComposeFile": "docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspaces/outfitpicker",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000",
      "installZsh": false
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "containerEnv": {
    "SWIFT_VERSION": "6.2"
  },
  "postCreateCommand": [
    "bash", "-c",
    "if [ -f /tmp/zscaler-certs/zscaler-root-ca.crt ]; then echo 'Installing Zscaler certs...'; sudo cp /tmp/zscaler-certs/*.crt /usr/local/share/ca-certificates/ && sudo update-ca-certificates; fi && swift --version || echo 'Swift not available'"
  ],
  "mounts": [
    "source=${localEnv:HOME}/.zscaler-certs,target=/tmp/zscaler-certs,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "swiftlang.swift-vscode",
        "ms-azuretools.vscode-docker",
        "amazonwebservices.amazon-q-vscode"
      ],
      "settings": {
        "swift.path": "/usr/bin/swift",
        "editor.formatOnSave": true,
        "[swift]": {
          "editor.defaultFormatter": "swiftlang.swift-vscode"
        },
        "[json]": {
          "editor.defaultFormatter": "vscode.json-language-features"
        },
        "[jsonc]": {
          "editor.defaultFormatter": "vscode.json-language-features"
        }
      }
    }
  },
  "remoteUser": "vscode"
}